// apps/web/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [pgvector(map: "vector")]
}

// --- Auth & Multi-tenancy ---

model Org {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  users           UserOrgRole[]
  projects        Project[]
  people          Person[]
  orgLevels       OrgLevel[]
  documentSources DocumentSource[]
  customResources CustomResource[]
  themeSettings   ThemeSettings[]
}

model User {
  id        String   @id // Supabase auth.uid()
  email     String   @unique
  name      String?
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  orgRoles       UserOrgRole[]
  googleAccounts GoogleAccount[]
  auditLogs      AuditLog[]
  taskHistory    TaskHistory[]
  preferences    UserPreferences?
}

enum Role {
  OWNER
  ADMIN
  MANAGER
  MEMBER
}

model UserOrgRole {
  id        String   @id @default(cuid())
  userId    String
  orgId     String
  role      Role     @default(MEMBER)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  org  Org  @relation(fields: [orgId], references: [id])

  @@unique([userId, orgId])
}

// --- OAuth & External Accounts ---

model GoogleAccount {
  id                 String   @id @default(cuid())
  userId             String
  email              String
  accessToken        String   @db.Text // Encrypted
  refreshToken       String?  @db.Text // Encrypted
  tokenExpiresAt     DateTime?
  scope              String?
  calendarConnected  Boolean  @default(false)
  driveConnected     Boolean  @default(false)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, email])
}

// --- Audit Logging ---

enum AuditAction {
  USER_CREATED
  USER_UPDATED
  USER_DELETED
  ORG_CREATED
  ORG_UPDATED
  ORG_MEMBER_ADDED
  ORG_MEMBER_REMOVED
  ORG_MEMBER_ROLE_CHANGED
  ORG_LEVEL_CREATED
  ORG_LEVEL_UPDATED
  ORG_LEVEL_DELETED
  PERSON_CREATED
  PERSON_UPDATED
  PERSON_DELETED
  PROJECT_CREATED
  PROJECT_UPDATED
  PROJECT_DELETED
  DELIVERABLE_CREATED
  DELIVERABLE_UPDATED
  DELIVERABLE_DELETED
  INVOICE_CREATED
  INVOICE_SENT
  INVOICE_PAID
  MFA_ENROLLED
  MFA_VERIFIED
  MFA_DISABLED
  PASSWORD_CHANGED
  OAUTH_CONNECTED
  OAUTH_DISCONNECTED
}

model AuditLog {
  id         String      @id @default(cuid())
  orgId      String?
  actorId    String
  action     AuditAction
  entityType String // e.g. "project", "deliverable", "user"
  entityId   String
  metadata   Json? // Additional context
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime    @default(now())

  actor User @relation(fields: [actorId], references: [id])

  @@index([orgId, createdAt])
  @@index([actorId, createdAt])
  @@index([entityType, entityId])
}

// --- Project Management Domain ---

enum ProjectStatus {
  SCOPING
  ACTIVE
  ON_HOLD
  COMPLETED
  ARCHIVED
}

model Project {
  id              String        @id @default(cuid())
  orgId           String
  name            String
  clientName      String?
  description     String?
  status          ProjectStatus @default(SCOPING)
  startDate       DateTime?
  endDate         DateTime?
  currency        String        @default("USD")
  targetMarginPct Decimal       @default(20)
  priceTotal      Decimal? // Optional override if fixed price at project level
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relations
  org          Org           @relation(fields: [orgId], references: [id])
  deliverables Deliverable[]
  allocations  Allocation[]
  timesheets   Timesheet[]
  invoices     Invoice[]
  documents    DocumentSource[]
  tasks        Task[]
  themeSettings ThemeSettings[]
}

enum DeliverableStatus {
  NOT_STARTED
  IN_PROGRESS
  UNDER_REVIEW
  COMPLETED
}

enum DeliverableType {
  REPORT
  MODEL
  WORKSHOP
  DASHBOARD
  OTHER
}

enum BillingModel {
  FIXED_FEE
  TIME_AND_MATERIALS
  MILESTONE
  UNIT_PRICE
}

model Deliverable {
  id            String            @id @default(cuid())
  projectId     String
  name          String
  description   String?
  type          DeliverableType   @default(OTHER)
  status        DeliverableStatus @default(NOT_STARTED)
  billingModel  BillingModel      @default(FIXED_FEE)
  
  // Commercials
  priceTotal    Decimal           @default(0)
  budgetHours   Decimal           @default(0)
  budgetCost    Decimal           @default(0)
  
  // Progress / Actuals
  percentComplete Decimal         @default(0)
  actualHours     Decimal         @default(0)
  actualCost      Decimal         @default(0)
  
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  // Relations
  project      Project       @relation(fields: [projectId], references: [id])
  allocations  Allocation[]
  timesheets   Timesheet[]
  invoiceLines InvoiceLine[]
  documents    DocumentSource[]
  tasks        Task[]
}

// --- Resource Management ---

// Organization Levels (Custom roles like "Consultant", "Senior Consultant", etc.)
model OrgLevel {
  id          String   @id @default(cuid())
  orgId       String
  name        String   // e.g. "Consultant", "Senior Consultant"
  description String?
  order       Int      @default(0) // For display ordering
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  org         Org      @relation(fields: [orgId], references: [id], onDelete: Cascade)
  people      Person[]

  @@unique([orgId, name])
}

model Person {
  id          String   @id @default(cuid())
  orgId       String
  userId      String?  // Optional link to auth user
  name        String
  email       String?
  orgLevelId  String?  // Link to OrgLevel
  managerId   String?  // Self-referencing for hierarchy
  defaultRate Decimal  @default(0) // Cost rate
  billRate    Decimal  @default(0) // Sell rate (if T&M)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  org         Org          @relation(fields: [orgId], references: [id])
  orgLevel    OrgLevel?    @relation(fields: [orgLevelId], references: [id])
  manager     Person?      @relation("PersonHierarchy", fields: [managerId], references: [id], onDelete: SetNull)
  reports     Person[]     @relation("PersonHierarchy")
  allocations Allocation[]
  timesheets  Timesheet[]
  taskResources TaskResource[]
  
  @@index([orgId])
  @@index([managerId])
  @@index([orgLevelId])
}

model Allocation {
  id            String   @id @default(cuid())
  projectId     String
  deliverableId String?
  personId      String
  
  startDate     DateTime
  endDate       DateTime
  hoursPerWeek  Decimal
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  project     Project      @relation(fields: [projectId], references: [id])
  deliverable Deliverable? @relation(fields: [deliverableId], references: [id])
  person      Person       @relation(fields: [personId], references: [id])
}

model Timesheet {
  id            String   @id @default(cuid())
  projectId     String
  deliverableId String?
  personId      String
  
  date          DateTime
  hours         Decimal
  notes         String?
  costRateAtTime Decimal @default(0)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  project     Project      @relation(fields: [projectId], references: [id])
  deliverable Deliverable? @relation(fields: [deliverableId], references: [id])
  person      Person       @relation(fields: [personId], references: [id])
}

// --- Billing ---

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  VOID
}

model Invoice {
  id        String        @id @default(cuid())
  projectId String
  number    String
  status    InvoiceStatus @default(DRAFT)
  issueDate DateTime
  dueDate   DateTime
  total     Decimal
  
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  // Relations
  project Project       @relation(fields: [projectId], references: [id])
  lines   InvoiceLine[]
}

model InvoiceLine {
  id            String  @id @default(cuid())
  invoiceId     String
  deliverableId String? // Can bill by deliverable
  
  description   String
  amount        Decimal
  
  // Relations
  invoice     Invoice      @relation(fields: [invoiceId], references: [id])
  deliverable Deliverable? @relation(fields: [deliverableId], references: [id])
}

// --- RAG / Knowledge ---

enum DocType {
  PDF
  PPTX
  DOCX
  MARKDOWN
  EMAIL
  MEETING_NOTES
}

model DocumentSource {
  id            String   @id @default(cuid())
  orgId         String
  projectId     String?
  deliverableId String?
  
  title         String
  type          DocType
  url           String? // S3 path or external URL
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  org         Org          @relation(fields: [orgId], references: [id])
  project     Project?     @relation(fields: [projectId], references: [id])
  deliverable Deliverable? @relation(fields: [deliverableId], references: [id])
  chunks      DocumentChunk[]
}

model DocumentChunk {
  id        String   @id @default(cuid())
  sourceId  String
  
  index     Int
  content   String
  metadata  Json?    // Page numbers, section headers
  embedding Unsupported("vector(1536)")?
  
  createdAt DateTime @default(now())

  // Relations
  source DocumentSource @relation(fields: [sourceId], references: [id], onDelete: Cascade)
}

// --- Gantt Module ---

enum TaskStatus {
  NOT_STARTED
  IN_PROGRESS
  BLOCKED
  UNDER_REVIEW
  COMPLETED
}

model Task {
  id              String     @id @default(cuid())
  deliverableId   String
  projectId       String     // Denormalized for easy querying
  
  name            String
  description     String?
  status          TaskStatus @default(NOT_STARTED)
  
  // Scheduling
  startDate       DateTime
  endDate         DateTime
  estimatedHours  Decimal    @default(0)
  actualHours     Decimal    @default(0)
  
  // Costing
  costEstimated   Decimal    @default(0)
  costActual      Decimal    @default(0)
  
  // Visual
  colour          String?    // Override theme color
  sortOrder       Int        @default(0)
  
  // Dependencies (stored as JSON array of task IDs)
  dependsOn       Json?      // Array of task IDs
  
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  
  // Relations
  deliverable     Deliverable    @relation(fields: [deliverableId], references: [id], onDelete: Cascade)
  project         Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  resources       TaskResource[]
  history         TaskHistory[]
  
  @@index([projectId])
  @@index([deliverableId])
}

model TaskResource {
  id              String   @id @default(cuid())
  taskId          String
  
  // Can be either a Person OR a CustomResource
  personId        String?
  customResourceId String?
  
  allocatedHours  Decimal  @default(0)
  actualHours     Decimal  @default(0)
  hourlyRate      Decimal  @default(0) // Captured at assignment time
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  task            Task              @relation(fields: [taskId], references: [id], onDelete: Cascade)
  person          Person?           @relation(fields: [personId], references: [id])
  customResource  CustomResource?   @relation(fields: [customResourceId], references: [id])
  
  @@index([taskId])
  @@index([personId])
}

model CustomResource {
  id          String   @id @default(cuid())
  orgId       String
  name        String
  hourlyRate  Decimal  @default(0)
  description String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  org         Org            @relation(fields: [orgId], references: [id], onDelete: Cascade)
  assignments TaskResource[]
  
  @@index([orgId])
}

enum TaskHistoryAction {
  CREATED
  UPDATED
  DELETED
  MOVED
  RESIZED
  RESOURCE_ASSIGNED
  RESOURCE_REMOVED
  STATUS_CHANGED
}

model TaskHistory {
  id          String            @id @default(cuid())
  taskId      String
  userId      String
  
  action      TaskHistoryAction
  fieldName   String?           // e.g., "startDate", "assignedResource"
  oldValue    Json?
  newValue    Json?
  
  createdAt   DateTime          @default(now())
  
  // Relations
  task        Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user        User @relation(fields: [userId], references: [id])
  
  @@index([taskId, createdAt])
}

model ThemeSettings {
  id                  String   @id @default(cuid())
  projectId           String?  // If null, it's the org default
  orgId               String
  
  primaryColour       String   @default("#3b82f6")
  accentColour        String   @default("#1e40af")
  backgroundColour    String   @default("#f8fafc")
  backgroundImageUrl  String?
  backgroundBlur      Int      @default(0)   // 0-100
  backgroundDim       Int      @default(0)   // 0-100
  
  logoUrl             String?
  logoOpacity         Int      @default(30)  // 5-70
  logoPosition        String   @default("bottom-right")
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  // Relations
  org                 Org      @relation(fields: [orgId], references: [id], onDelete: Cascade)
  project             Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  @@unique([orgId, projectId])
  @@index([orgId])
  @@index([projectId])
}

model UserPreferences {
  id                    String   @id @default(cuid())
  userId                String   @unique
  
  ganttZoomLevel        String   @default("week") // day, week, month, quarter
  ganttSnapToGrid       Boolean  @default(true)
  ganttShowDependencies Boolean  @default(false)
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  // Relations
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}


